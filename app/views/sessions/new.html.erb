<div class= "well">
<h1>Login</h1>
</div>

<%= form_tag '/login' do %>

<div class= "well">
  <div class = "form-group" > 
  <label >Email</label>    
  <div ><%= text_field_tag :email %>  </div>
  </div>

  <div class = "form-group" > 
      <label >Password</label>
      <div> <%= password_field_tag :password %> </div>
  </div>

  <div class = "form-group" >  
    <%= submit_tag "Submit" %> 
  </div>

 <% end %>

</div>